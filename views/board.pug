extends layout

block content
  h1= title
  p Number of rows #{query.rows} Number of Columns #{query.cols}

  - rows = Number(query.rows)
  - col = Number(query.cols)
  if !(Number.isInteger(rows)) || !(Number.isInteger(col))
    p Rows or Columns is not a number
  else if rows<1 || rows >10
    p Number of Rows is out of range. Pick a number 1-10
  else if col<1 || col >10
    p Number of Columns is out of range. Pick a number 1-10
  else 
    table#outer
      - for(let i=0; i<rows; i++) {
        tr#middle
          - for(let j=0; j<col; j++) {
            if i==j
              td 1
            else if i-j==1
              td 2
            else if j-i==1
              td=i
            else
              td 0
            //td= value
          - }
      - }

  script.
    output = document.getElementById("val")
    function value(row, col){
      if(row==col){
        output.innerHTML = 1
      }
      else if(row-col==1){
        output.innerHTML = 2;
      }
      else if (col-row==1){
        output.innerHTML = row;
      }
      else{
        output.innerHTML = 0;
      }
    }
  